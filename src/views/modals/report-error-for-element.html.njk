<!-- Pop up message alerte-->
<div id="popup-report-error" class="modal action-modal">
  <div class="modal-content">
  	<form>

		    <h5 id="modal-title">Signaler une erreur concernant <span class="elementName"></span></h5>
		    <p>Quelle erreur voulez-vous signaler ?</p>	 

		    <p id="select-error" class="error">Vous devez sélectionner un type d'erreur!</p>

				<input class="option-radio-btn "value="0" name="report-error" type="radio" id="report1"/>
		    <label class="option-radio-label" for="report1">{{ config.text.elementDefinite }} n'existe plus</label>

		    <input class="option-radio-btn "value="1" name="report-error" type="radio" id="report2"/>
		    <label class="option-radio-label" for="report2">Les informations ne sont pas correctes</label>

		    <input class="option-radio-btn "value="2" name="report-error" type="radio" id="report3"/>
		    <label class="option-radio-label" for="report3">{{ config.text.elementDefinite }} ne respecte pas la charte de "Près de chez nous" </label>

		    <p id="mail-error" class="error" style="margin-bottom: -15px;">Veuillez renseigner une adresse mail valide</p>
		    <div class="input-field" >
						<input class="input-mail validate" type="email" placeholder="Votre adresse mail" style="margin-bottom: 0">
				</div>

				<div class="input-field">
						<input class="input-comment" type="text" placeholder="Commentaire optionnel pour la modération"/>
				</div>
			
			<div class="footer">
				<button type="button"
						onclick="$('#popup-report-error').closeModal()"  
						class="waves-effect waves-teal btn-flat">
					Annuler
				</button>
				
				<button type="button" 
						id="submit-report"		
						class="btn waves-effect waves-light">
						Envoyer
				</button>
			</div>

		</form>	    

  </div>
   
</div>