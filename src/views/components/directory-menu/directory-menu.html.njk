  <div class="directory-menu-header">

		{% include 'components/directory-menu/search-bar.html.njk'  %} 			

		<div class="btn-close-menu large-screen tooltipped" data-tooltip="Fermer le menu" data-position="right" data-delay="300"><span class="arrow-left"></span></div>	

		<div class="search-results subheader" style="display:none">
		    <span class="search-result-label">Résultats : <span id="search-result-number"></span> {{ config.text.element }}(s) trouvé-e(s)</span>
