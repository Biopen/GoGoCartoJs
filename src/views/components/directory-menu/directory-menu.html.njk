		<div class="shadow-bottom"></div>
	</div>	

	<div class="directory-menu-content">
	  
	  {% import 'components/spinner-loader.html.njk' as spinnerLoader %}
		{{ spinnerLoader.create('directory-menu-spinner-loader') }}

	  {% include 'components/directory-menu/filters-menu.html.njk' %}

	</div>

	<div class="btn-close-menu small-screen gogo-bg-neutral z-depth-2">Filtrer</div>

