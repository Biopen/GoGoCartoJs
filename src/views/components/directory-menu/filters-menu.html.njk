

<div class="filter-menu">	

	{# MAIN CATEGORIE SIDE BAR #}
	<div class="main-categories gogo-bg-neutral-dark custom-scroll-bar-light" {{  '' if fullTaxonomy else 'style="display:none"' }}>

		<div class="icon main-gogo-icon-background gogo-bg-neutral" id="active-main-option-background"></div>

		<div class="icon main-icon active gogo-icon-users gogo-neutral gogo-h-neutral-light" id="main-option-gogo-icon-all" data-option-id="all">
			<div class="main-option-tooltip gogo-bg-neutral-dark">Tous les {{ config.text.elementPlural }}</div>
		</div> 

		{# MAIN OPTIONS ICONS & TOOLTIP #}
		{% for mainOption in mainCategory.options %}
			<div class="icon main-icon {{ mainOption.icon }} gogo-neutral gogo-h-neutral-light"  id="main-option-gogo-icon-{{mainOption.id}}" data-option-id="{{ mainOption.id }}">
				<div class="main-option-tooltip gogo-bg-neutral-dark-transparent">{{ mainOption.name }}</div>
			</div>
		{% endfor %}

	</div>

	<div class="sub-categories">

		<div class="sub-categorie-main-title gogo-neutral-dark" id="menu-subcategories-title"></div>

			<div class="sub-categories-content no-top-divider">
			<ul>
				{# ALL CATEGORIES FILTERS #}
				<div id="main-option-all" class="main-option-subcategories-container" style="display:none">		

					{% import 'components/directory-menu/category-item.html.njk' as categoryRenderer %}
					{{ categoryRenderer.renderItem(mainCategory, false, config.menu.showCheckboxForMainOptions) }} 

				</div>

				{# SUBCATEGORIES FILTERS FOR EACH MAIN OPTION #}
				{% for mainOption in mainCategory.options %}

					<div id="main-option-{{ mainOption.id }}" class="main-option-subcategories-container" style="display:none">		

						{% for category in mainOption.subcategories %}
							{{ categoryRenderer.renderItem(category, true, config.menu.showCheckboxForSubOptions) }} 
						{% endfor %} 

					</div>

				{% endfor %}

				{# OPEN HOURS FILTER #}
				<div id="open-hours-filter" class="" style="display:none">		
					{{ categoryRenderer.renderItem(openHoursCategory, false, config.menu.showCheckboxForSubOptions) }} 
				</div> 


				<li class="subcategory-item expanded unexpandable">
					<div class="name-wrapper">		
						<span class="name">Autres Filtres</span>
					</div>
				</li>

				<div class="options-wrapper">

					{# ELEMENT WITH PENDING STATUS#}	
					{% if config.isFeatureAvailable('pending') %}
						<li class="subcategorie-option-item row tooltipped" id="filter-pending" data-position="right" data-delay="300" data-tooltip="Afficher les éléments en attente de validation">
					    <span class="icon gogo-icon-attention"></span>
					    {#{% if config.isFeatureAvailable('directModeration') %}
					    	<span class="option-name">Attente validation</span><span class="icon gogo-icon-eye gogo-h-primary" id="show-only-pending"></span></span> 
				    	{% else %}
				    		<span class="option-name"><span class="validation-process-info">En cours de validation</span></span> 
				    	{% endif %}#}
				    	<span class="option-name">A valider</span><span class="icon gogo-icon-eye gogo-h-primary" id="show-only-pending"></span></span> 

					    {# --- CHECKBOX ---- #}
							<div class="checkbox-wrapper">
								<div class="checkbox-container">
						      <input type="checkbox" checked class="subcategorie-option-checkbox pending-checkbox" id="pending-checkbox" data-type='pending' data="pending" />
						      <label for="pending-checkbox" ></label>
					    	</div>
					    </div>
						</li>
					{% endif %}

					{# FAVORITE #}
					{% if config.isFeatureActivated('favorite') %}
						<li class="subcategorie-option-item row tooltipped" id="filter-favorite" data-position="right" data-delay="300" data-tooltip="Afficher uniquement les favoris">
					    <span class="icon gogo-icon-star-full"></span>
					    <span class="option-name">Vos favoris</span> 

					    {# --- CHECKBOX ---- #}
							<div class="checkbox-wrapper">
								<div class="checkbox-container">
						      <input type="checkbox" class="subcategorie-option-checkbox favorite-checkbox" id="favorite-checkbox" data-type='favorite' data="favorite" />
						      <label for="favorite-checkbox" ></label>
					    	</div>
					    </div>
						</li>
					{% endif %}		

				</div>	

			</ul>
		</div>

	</div>
</div>
			